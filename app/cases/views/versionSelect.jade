select#rha-product-version-select.form-control(
	chosen,
	width='"100%"',
    data-placeholder="{{placeholder || 'Select an Option' | translate}}",
    no_results_text="'No match found'|translate",
	ng-model='version',
	ng-options='v for v in versions',
	ng-change='onVersionSelect($event)',
	ng-disabled='ProductsService.versionDisabled || CaseService.kase.product === undefined || !securityService.loginStatus.isLoggedIn || CaseService.submittingCase')
    option(value="")
div.versionSunsetMessage(ng-show='ProductsService.showVersionSunset()')
    span {{'This release is now retired, please refer to the recommended FAQ prior to filing a case'|translate}}
