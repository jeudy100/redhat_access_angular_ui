section.filters
  .row
    .col-sm-4
      select#rha-status-select(
        chosen,
        width="'100%'",
        name='status',
        ng-model='CaseService.kase.status',
        ng-change="updateCase()",
        ng-options='s.name | translate for s in CaseService.statuses track by s.name',
        no_results_text="'No match found'|translate")
    .col-sm-4
      select#rha-severity-select(
        chosen,
        width="'100%'",
        name='severity',
        ng-model='CaseService.kase.severity',
        ng-change="updateSeverity()",
        ng-options='s.name as s.translatedName | translate for s in CaseService.severities track by s.name',
        no_results_text="'No match found'|translate")
